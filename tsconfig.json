{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"sourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"exclude": ["node_modules", "test/**", "node", "web", "dist"]
}
